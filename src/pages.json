{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^tm-(.*)": "@/tmui/components/tm-$1/tm-$1.vue"
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uniapp:vue3+ts",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        // "navigationStyle": "custom", // 隐藏系统导航栏
        "enablePullDownRefresh": false
        // "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/example/index/index",
      "name": "example",
      "style": {
        "navigationBarTitleText": "例子首页"
      }
    },
    {
      "path": "pages/example/navbar/NavBar",
      "name": "NavBar",
      "style": {
        "navigationBarTitleText": "navbar",
        "navigationStyle": "custom", // 隐藏系统导航栏
        "enablePullDownRefresh": false
        // "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/example/poster/index",
      "name": "poster",
      "style": {
        "navigationBarTitleText": "sakura-canvas-ts"
      }
    },
    {
      "path": "pages/example/poster/autoHeight",
      "style": {
        "navigationBarTitleText": "不固定高度"
      }
    },
    {
      "path": "pages/example/poster/autoBackground",
      "style": {
        "navigationBarTitleText": "不固定背景图片高度"
      }
    },
    {
      "path": "pages/example/poster/poster",
      "style": {
        "navigationBarTitleText": "海报分享图"
      }
    },
    {
      "path": "pages/example/poster/jsonPoster",
      "style": {
        "navigationBarTitleText": "JSON-海报分享图"
      }
    }
  ]
}
